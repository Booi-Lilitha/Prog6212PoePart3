@model ContractMonthlyClaims.Models.Claim
<h3>Claim #@Model.Id</h3>
<p><b>Lecturer:</b> @Model.LecturerUsername</p>
<p><b>Hours:</b> @Model.Hours</p>
<p><b>Amount:</b> @Model.Amount</p>
<p><b>Status:</b> @Model.Status</p>

@if (Context.Session.GetString("Role") == "Coordinator")
{
    <form method="post" asp-action="Edit" asp-route-id="@Model.Id">
        <button name="action" value="approve_coord" class="btn btn-success">Approve (Coord)</button>
        <button name="action" value="reject" class="btn btn-danger">Reject</button>
    </form>
}
else if (Context.Session.GetString("Role") == "Manager")
{
    <form method="post" asp-action="Edit" asp-route-id="@Model.Id">
        <button name="action" value="approve_mgr" class="btn btn-success">Approve (Mgr)</button>
        <button name="action" value="reject" class="btn btn-danger">Reject</button>
    </form>
}
else
{
    <p class="text-muted">You cannot approve this claim.</p>
}
