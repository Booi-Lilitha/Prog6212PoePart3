@model IEnumerable<ContractMonthlyClaims.Models.Claim>
<h3>Claims</h3>
<table class="table">
    <thead><tr><th>ID</th><th>Lecturer</th><th>Month</th><th>Hours</th><th>Amount</th><th>Status</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.LecturerUsername</td>
                <td>@c.Month/@c.Year</td>
                <td>@c.Hours</td>
                <td>@c.Amount</td>
                <td>@c.Status</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@c.Id">Open</a>
                    @if (!string.IsNullOrEmpty(c.FilePath))
                    {
                        <a class="btn btn-sm btn-secondary" asp-action="Download" asp-route-id="@c.Id">Download</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
