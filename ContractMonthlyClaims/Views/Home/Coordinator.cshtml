@model List<ContractMonthlyClaims.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims - Coordinator";
}

<h2>Pending Claims (Coordinator)</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Year</th>
            <th>Hours</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Submitted</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.LecturerUsername</td>
                <td>@c.Month</td>
                <td>@c.Year</td>
                <td>@c.Hours</td>
                <td>R @c.Amount</td>
                <td>@c.Status</td>
                <td>@c.SubmitDate.ToString("yyyy-MM-dd")</td>

                <td>
                    <form asp-action="ApproveClaim" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="hidden" name="role" value="coordinator" />
                        <button class="btn btn-success btn-sm">Approve</button>
                    </form>

                    <form asp-action="RejectClaim" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="hidden" name="role" value="coordinator" />
                        <button class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
